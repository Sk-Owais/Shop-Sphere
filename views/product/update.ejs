<html>

<head>
    <%- include('../component/head',{data:{title:'Product Update'}}); %>
</head>

<body>
    <%- include("../component/menu"); %>
        <div class="container">
            <div class="offset-sm-3 col-6">
                <form action="/product/<%=products.id%>" method="post">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" name="productName" value="<%= products.name %>" class="form-control"
                            placeholder="Please Enter Product Name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="text" name="productPrice" value="<%= products.price %>" class="form-control"
                            placeholder="Please Enter Product Price">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="desc" class="form-control" placeholder="Enter Description"
                            required><%=products.description%></textarea>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Update Product">
                </form>
            </div>
        </div>
        <%- include("../component/footer") %>
</body>

</html>